<div id="review-panel" class="review_selection">
    <div class="createpop_outer">
        <a class="close_popup" href="javascript:void(0);"></a>
        <div class="create_wrapper">
            <%= render :partial => 'posts/post_creation/post_creation_navigation' %>
            <p class="desc_text">Tell the fans world about this review</p>
            <%= form_tag  review_create_posts_path , :id => 'validate_image', 
                     :multipart => true do %>
                <div class="float_L">
                        <%= hidden_field_tag 'movie_id'  %>
                        <%= hidden_field_tag 'user_id' %>
                        <%= text_field_tag :rating,nil, :class=> "cmn_inpt",
                            :placeholder => "Rating" %>
                        <%= text_field_tag :punchline,nil, :class=> "cmn_inpt",
                            :placeholder => "Punch line" %>
                        <%= text_area_tag :analysis,nil, :class => "cmn_txtarea ckeditor",
                            :placeholder => "Analysis" %>
                        <label class="post_fb">
                            <%= check_box_tag :post_to_facebook, nil, :class => "post_fb"  %>   Post to facebook
                        </label>
                </div>
                <div class="create_footer float_L">
                    <%= submit_tag 'submit' , :class => "sub_btn" %>
                </div>
            <% end %>
        </div>
    </div>
</div>